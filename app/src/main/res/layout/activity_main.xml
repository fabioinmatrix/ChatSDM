<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@drawable/main"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_about"
        app:layout_constraintEnd_toEndOf="@+id/btn_about"
        app:layout_constraintStart_toStartOf="@+id/btn_about"
        app:layout_constraintTop_toTopOf="@+id/btn_about"
        app:srcCompat="@drawable/bg" />

    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Adicionar Contatos"
        android:textAllCaps="false"
        android:textColor="#918f90"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_about" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_contact"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_contact"
        app:layout_constraintStart_toStartOf="@+id/btn_add_contact"
        app:layout_constraintTop_toTopOf="@+id/btn_add_contact"
        app:srcCompat="@drawable/bg" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Sobre o SDM4-CHAT..."
        android:textAllCaps="false"
        android:textColor="#918f90"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_contatcts_list"
        app:layout_constraintEnd_toEndOf="@+id/btn_contatcts_list"
        app:layout_constraintStart_toStartOf="@+id/btn_contatcts_list"
        app:layout_constraintTop_toTopOf="@+id/btn_contatcts_list"
        app:srcCompat="@drawable/bg" />

    <Button
        android:id="@+id/btn_contatcts_list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Contatos..."
        android:textAllCaps="false"
        android:textColor="#918f90"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_2" />

</android.support.constraint.ConstraintLayout>